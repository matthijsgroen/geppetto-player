{
  "name": "geppetto-player",
  "version": "1.2.0",
  "description": "WebGL Player for Geppetto files",
  "keywords": [
    "canvas",
    "webgl",
    "2d",
    "animation",
    "interaction"
  ],
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:matthijsgroen/geppetto-player.git",
  "author": "Matthijs Groen <matthijs.groen@gmail.com> (https://github.com/matthijsgroen)",
  "homepage": "https://geppetto.js.org",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "tsc --noEmit && yarn build-shaders",
    "build-shaders": "bin/minifyShader.ts src/shaders/fragmentShader.frag && bin/minifyShader.ts src/shaders/vertexShader.vert",
    "build": "parcel build",
    "postbuild": "yarn build-docs",
    "build-docs": "typedoc src/index.ts --includeVersion --name 'Geppetto Player' --json typedocs.json --logLevel Error",
    "postbuild-docs": "size-limit",
    "test": "jest",
    "lint": "eslint src/",
    "size": "size-limit"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "webpack": false,
      "limit": "10KB"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@parcel/packager-ts": "2.0.0",
    "@parcel/transformer-glsl": "2.0.0",
    "@parcel/transformer-typescript-types": "2.0.0",
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "parcel": "^2.0.0",
    "prettier": "^2.2.1",
    "size-limit": "^4.10.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4",
    "webpack-glsl-minify": "^1.4.2"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "delaunator": "^4.0.1"
  },
  "browserslist": [
    "chrome 87",
    "firefox 78"
  ]
}
